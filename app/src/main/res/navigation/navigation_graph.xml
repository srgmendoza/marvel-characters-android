<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.samr.marvelcharacterswiki.ui.fragments.CharactersListFragment"
        android:label="list_fragment"
        tools:layout="@layout/fragment_characters_list" >
        <action
            android:id="@+id/action_initFragment_to_secondFragment"
            app:destination="@id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.samr.marvelcharacterswiki.ui.fragments.CharacterDetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="characterId"
            app:argType="string" />

    </fragment>

</navigation>